@model doan3.Models.KetQuaHocTap

@{
    ViewData["Title"] = "Cập nhật kết quả học tập";
}

<div class="container mt-4">
    <div class="card shadow rounded">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fas fa-edit"></i> Cập nhật kết quả học tập</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="KetquaId" />

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="LopId"></label>
                        <select asp-for="LopId" class="form-control" asp-items="ViewBag.LopId"></select>
                        <span asp-validation-for="LopId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="HosoId"></label>
                        <select asp-for="HosoId" class="form-control" asp-items="ViewBag.HosoId"></select>
                        <span asp-validation-for="HosoId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Nhanxet"></label>
                    <textarea asp-for="Nhanxet" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Nhanxet" class="text-danger"></span>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label asp-for="Sobuoiodahoc"></label>
                        <input asp-for="Sobuoiodahoc" class="form-control" />
                        <span asp-validation-for="Sobuoiodahoc" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Sobuoitoithieu"></label>
                        <input asp-for="Sobuoitoithieu" class="form-control" />
                        <span asp-validation-for="Sobuoitoithieu" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="KmHoanthanh"></label>
                        <input asp-for="KmHoanthanh" class="form-control" />
                        <span asp-validation-for="KmHoanthanh" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label asp-for="GioBandem"></label>
                        <input asp-for="GioBandem" class="form-control" />
                        <span asp-validation-for="GioBandem" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="HtLythuyet"></label>
                        <input asp-for="HtLythuyet" class="form-control" />
                        <span asp-validation-for="HtLythuyet" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="HtMophong"></label>
                        <input asp-for="HtMophong" class="form-control" />
                        <span asp-validation-for="HtMophong" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label asp-for="HtSahinh"></label>
                        <input asp-for="HtSahinh" class="form-control" />
                        <span asp-validation-for="HtSahinh" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="HtDuongtruong"></label>
                        <input asp-for="HtDuongtruong" class="form-control" />
                        <span asp-validation-for="HtDuongtruong" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="DauTn"></label>
                        <input asp-for="DauTn" class="form-control" />
                        <span asp-validation-for="DauTn" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="DuDkThisat"></label>
                        <input asp-for="DuDkThisat" class="form-control" />
                        <span asp-validation-for="DuDkThisat" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Thoigiancapnhat"></label>
                        <input asp-for="Thoigiancapnhat" class="form-control" />
                        <span asp-validation-for="Thoigiancapnhat" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Lưu</button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary ml-2">Quay về trang chủ</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}