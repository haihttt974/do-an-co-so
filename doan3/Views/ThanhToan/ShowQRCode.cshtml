@{
    ViewData["Title"] = "Quét mã QR để thanh toán";
    var loaiThanhToan = ViewBag.Type == "thi" ? "Phí thi" : "Phí khóa học";
}

<div class="container mt-4">
    <h2 class="mb-4">📱 Quét mã QR để thanh toán</h2>

    <div class="card shadow-sm">
        <div class="card-body">

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label">🔹 Loại thanh toán:</label>
                <div class="col-sm-8">
                    <input class="form-control" value="@loaiThanhToan" disabled />
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label">💰 Số tiền:</label>
                <div class="col-sm-8">
                    <input class="form-control" value="@string.Format("{0:N0} VNĐ", ViewBag.SoTien)" disabled />
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label">👤 Người thanh toán:</label>
                <div class="col-sm-8">
                    <input class="form-control" value="@ViewBag.TenNguoiThanhToan" disabled />
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label">📌 Phương thức:</label>
                <div class="col-sm-8">
                    <input class="form-control" value="@ViewBag.PhuongThuc" disabled />
                </div>
            </div>

            <div class="text-center my-4">
                <img src="https://api.qrserver.com/v1/create-qr-code/?data=@ViewBag.QRCode&size=200x200" alt="QR Code" class="img-fluid" />
                <p class="mt-2"><strong>🆔 Mã giao dịch:</strong> @ViewBag.QRCode</p>
            </div>

            <form asp-action="CompletePayment" method="post" class="text-center">
                <input type="hidden" name="hosoId" value="@ViewBag.HoSoId" />
                <input type="hidden" name="ketQuaHocTapId" value="@ViewBag.KetQuaHocTapId" />
                <input type="hidden" name="ctDangKyThiId" value="@ViewBag.CtDangKyThiId" />
                <input type="hidden" name="tenNguoiThanhToan" value="@ViewBag.TenNguoiThanhToan" />
                <input type="hidden" name="phuongThuc" value="@ViewBag.PhuongThuc" />
                <input type="hidden" name="soTien" value="@ViewBag.SoTien" />
                <input type="hidden" name="type" value="@ViewBag.Type" />

                <button type="submit" class="btn btn-success px-5 py-2">✅ Tôi đã thanh toán</button>
            </form>

        </div>
    </div>
</div>
