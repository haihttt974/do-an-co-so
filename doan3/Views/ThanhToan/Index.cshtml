@model IEnumerable<doan3.Models.KetQuaHocTap>

@{
    ViewData["Title"] = "Danh sách phí cần thanh toán";
}

<h2>🧾 Phí cần thanh toán</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Hồ sơ ID</th>
            <th>Ghi chú</th>
            <th>Học viên</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.HosoId</td>
                <td>@item.Nhanxet</td>
                <td>@item.Hoso?.Hocvien?.Tenhocvien</td>
                <td>
                    <a class="btn btn-success"
                       href="@Url.Action("ConfirmPayment", "ThanhToan", new { id = item.KetquaId })">
                        Thanh toán ngay
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
