@model IEnumerable<doan3.Models.CtDangKyThi>

@{
    ViewData["Title"] = "Thanh toán phí thi";
}

<h2>📝 Thanh toán phí thi</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Hồ sơ</th>
            <th>Học viên</th>
            <th>Thời gian đăng ký</th>
            <th>Kỳ thi</th>
            <th>Phí thi</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.HosoId</td>
                <td>@item.Hoso?.Hocvien?.Tenhocvien</td>
                <td>@item.Thoigiandk.ToString("dd/MM/yyyy")</td>
                <td>@item.Kythi?.Tenkythi</td>
                <td>@(item.Hoso?.Hang?.PhiThi?.ToString("N0") ?? "0") VNĐ</td>
                <td>
                    <a class="btn btn-success"
                       href="@Url.Action("ConfirmPayment", "ThanhToan", new { id = item.CtDktId, type = "thi" })">
                        Thanh toán
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
