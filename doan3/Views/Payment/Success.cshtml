@{
    ViewData["Title"] = "Thanh toán thành công";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg text-center">
                <div class="card-body">
                    <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                    <h1 class="mt-3 mb-4 text-success">Thanh toán thành công!</h1>
                    <p class="lead">
                        @if (ViewBag.Type == "Thi")
                        {
                            @: Cảm ơn bạn đã thanh toán phí kỳ thi.
                        }
                        else if (ViewBag.Type == "KhoaHoc")
                        {
                            @: Cảm ơn bạn đã thanh toán phí khóa học.
                        }
                    </p>
                    <a asp-action="@(ViewBag.Type == "Thi" ? "UserThi" : "UserKhoaHoc")" class="btn btn-primary btn-lg mt-3">Quay lại</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}