@model doan3.ViewModel.RegisterViewModel

@{
    ViewData["Title"] = "Đăng ký học viên";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Driving School</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <!-- GSAP -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>

    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            overflow-x: hidden;
        }

        .register-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 1rem;
        }

        .register-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            padding: 3rem;
            width: 100%;
            max-width: 800px;
            position: relative;
            overflow: hidden;
        }

            .register-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 5px;
                background: linear-gradient(90deg, #667eea, #764ba2, #667eea);
                background-size: 200% 100%;
                animation: shimmer 2s infinite;
            }

        @@keyframes shimmer {
            0% {
                background-position: -200% 0;
            }

            100% {
                background-position: 200% 0;
            }
        }

        .logo-container {
            text-align: center;
            margin-bottom: 2rem;
        }

        .logo {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #667eea;
            margin-bottom: 1rem;
            box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
        }

        .brand-title {
            color: #333;
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .brand-subtitle {
            color: #666;
            font-size: 0.9rem;
            margin-bottom: 2rem;
        }

        .form-floating {
            margin-bottom: 1.5rem;
        }

        .form-control {
            border: 2px solid #e9ecef;
            border-radius: 12px;
            padding: 1rem 1.2rem;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: rgba(255, 255, 255, 0.9);
        }

            .form-control:focus {
                border-color: #667eea;
                box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
                background: white;
            }

        .form-floating > label {
            color: #666;
            font-weight: 500;
        }

        .btn-register {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 12px;
            padding: 1rem 2rem;
            font-size: 1.1rem;
            font-weight: 600;
            color: white;
            width: 100%;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .btn-register:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 20px rgba(102, 126, 234, 0.4);
                background: linear-gradient(135deg, #5a6fd8 0%, #6a4190 100%);
            }

            .btn-register:active {
                transform: translateY(0);
            }

        .btn-login {
            background: transparent;
            border: 2px solid #667eea;
            color: #667eea;
            border-radius: 12px;
            padding: 0.8rem 2rem;
            font-weight: 600;
            width: 100%;
            transition: all 0.3s ease;
            margin-top: 1rem;
        }

            .btn-login:hover {
                background: #667eea;
                color: white;
                transform: translateY(-2px);
                box-shadow: 0 8px 16px rgba(102, 126, 234, 0.3);
            }

        .alert {
            border-radius: 12px;
            border: none;
            margin-bottom: 1.5rem;
        }

        .alert-danger {
            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
            color: white;
        }

        .floating-shapes {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: -1;
        }

        .shape {
            position: absolute;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            animation: float 6s ease-in-out infinite;
        }

            .shape:nth-child(1) {
                width: 80px;
                height: 80px;
                top: 10%;
                left: 10%;
                animation-delay: 0s;
            }

            .shape:nth-child(2) {
                width: 120px;
                height: 120px;
                top: 20%;
                right: 15%;
                animation-delay: 2s;
            }

            .shape:nth-child(3) {
                width: 60px;
                height: 60px;
                bottom: 15%;
                left: 20%;
                animation-delay: 4s;
            }

            .shape:nth-child(4) {
                width: 100px;
                height: 100px;
                bottom: 20%;
                right: 10%;
                animation-delay: 1s;
            }

        @@keyframes float {
            0%, 100% {
                transform: translateY(0px) rotate(0deg);
            }

            50% {
                transform: translateY(-20px) rotate(180deg);
            }
        }

        .input-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #666;
            z-index: 10;
        }

        .form-floating.with-icon .form-control {
            padding-left: 3rem;
        }

        .form-floating.with-icon > label {
            left: 3rem;
        }

        .form-check-input:checked {
            background-color: #667eea;
            border-color: #667eea;
        }

        @@media (max-width: 576px) {
            .register-card {
                padding: 2rem 1.5rem;
                margin: 1rem;
            }

            .brand-title {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <!-- Floating Background Shapes -->
    <div class="floating-shapes">
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
    </div>

    <div class="register-container">
        <div class="register-card" id="registerCard">
            <!-- Logo and Branding -->
            <div class="logo-container" id="logoContainer">
                <img src="~/img/content/logo.png" alt="Driving School Logo" class="logo" id="logo">
                <h2 class="brand-title" id="brandTitle">Driving School</h2>
                <p class="brand-subtitle" id="brandSubtitle">Tạo tài khoản mới để bắt đầu</p>
            </div>

            <!-- Error Messages -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger" id="errorAlert">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div><i class="fas fa-exclamation-triangle me-2"></i>@error.ErrorMessage</div>
                    }
                </div>
            }

            <!-- Registration Form -->
            <form asp-action="Register" method="post" id="registerForm">
                <div class="row">
                    <div class="col-md-6">
                        <!-- Họ tên học viên -->
                        <div class="form-floating with-icon mb-3" id="fullNameField">
                            <i class="fas fa-user input-icon"></i>
                            <input asp-for="TenHocVien" class="form-control" id="tenHocVien" placeholder="Họ tên học viên" required>
                            <label for="tenHocVien">Họ tên học viên</label>
                            <span asp-validation-for="TenHocVien" class="text-danger"></span>
                        </div>

                        <!-- Số CCCD -->
                        <div class="form-floating with-icon mb-3" id="cccdField">
                            <i class="fas fa-id-card input-icon"></i>
                            <input asp-for="SoCCCD" class="form-control" id="soCCCD" placeholder="Số CCCD" required>
                            <label for="soCCCD">Số CCCD</label>
                            <span asp-validation-for="SoCCCD" class="text-danger"></span>
                        </div>

                        <!-- Giới tính -->
                        <div class="mb-3" id="genderField">
                            <label class="form-label">Giới tính</label>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="GioiTinh" id="gioiTinhNam" value="Nam" required>
                                <label class="form-check-label" for="gioiTinhNam">Nam</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="GioiTinh" id="gioiTinhNu" value="Nữ">
                                <label class="form-check-label" for="gioiTinhNu">Nữ</label>
                            </div>
                            <span asp-validation-for="GioiTinh" class="text-danger"></span>
                        </div>

                        <!-- Ngày sinh -->
                        <div class="form-floating with-icon mb-3" id="dobField">
                            <i class="fas fa-calendar-alt input-icon"></i>
                            <input asp-for="NgaySinh" class="form-control" id="ngaySinh" type="date" placeholder="Ngày sinh" required>
                            <label for="ngaySinh">Ngày sinh</label>
                            <span asp-validation-for="NgaySinh" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <!-- Username -->
                        <div class="form-floating with-icon mb-3" id="usernameField">
                            <i class="fas fa-user input-icon"></i>
                            <input asp-for="Username" class="form-control" id="username" placeholder="Tên đăng nhập" required>
                            <label for="username">Tên đăng nhập</label>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <!-- Password -->
                        <div class="form-floating with-icon mb-3" id="passwordField">
                            <i class="fas fa-lock input-icon"></i>
                            <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Mật khẩu" required>
                            <label for="password">Mật khẩu</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- Email -->
                        <div class="form-floating with-icon mb-3" id="emailField">
                            <i class="fas fa-envelope input-icon"></i>
                            <input asp-for="Email" class="form-control" id="email" placeholder="Email" required>
                            <label for="email">Email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Số điện thoại -->
                        <div class="form-floating with-icon mb-3" id="phoneField">
                            <i class="fas fa-phone input-icon"></i>
                            <input asp-for="SDT" class="form-control" id="sdt" placeholder="Số điện thoại" required>
                            <label for="sdt">Số điện thoại</label>
                            <span asp-validation-for="SDT" class="text-danger"></span>
                        </div>

                        <!-- Địa chỉ -->
                        <div class="form-floating with-icon mb-3" id="addressField">
                            <i class="fas fa-map-marker-alt input-icon"></i>
                            <input asp-for="DiaChi" class="form-control" id="diaChi" placeholder="Địa chỉ" required>
                            <label for="diaChi">Địa chỉ</label>
                            <span asp-validation-for="DiaChi" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Register Button -->
                <button type="submit" class="btn btn-register" id="registerBtn">
                    <i class="fas fa-user-plus me-2"></i>Đăng ký
                </button>
            </form>

            <!-- Login Link -->
            <a href="@Url.Action("Login", "Account")" class="btn btn-login" id="loginBtn">
                <i class="fas fa-sign-in-alt me-2"></i>Đã có tài khoản? Đăng nhập
            </a>
        </div>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Validation Scripts -->
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

    <script>
        // GSAP Animations
        document.addEventListener('DOMContentLoaded', function () {
            // Create timeline
            const tl = gsap.timeline();

            // Initial state
            gsap.set("#registerCard", { scale: 0.8, opacity: 0 });
            gsap.set("#logo", { scale: 0, rotation: -180 });
            gsap.set("#brandTitle, #brandSubtitle", { opacity: 0, y: 20 });
            gsap.set("#fullNameField, #cccdField, #genderField, #dobField, #usernameField, #passwordField, #emailField, #phoneField, #addressField, #registerBtn, #loginBtn", {
                opacity: 0,
                x: -30
            });

            // Animate register card entrance
            tl.to("#registerCard", {
                duration: 0.8,
                scale: 1,
                opacity: 1,
                ease: "back.out(1.7)"
            })
            // Animate logo
            .to("#logo", {
                duration: 0.6,
                scale: 1,
                rotation: 0,
                ease: "back.out(1.7)"
            }, "-=0.4")
            // Animate title and subtitle
            .to("#brandTitle", {
                duration: 0.5,
                opacity: 1,
                y: 0,
                ease: "power2.out"
            }, "-=0.3")
            .to("#brandSubtitle", {
                duration: 0.5,
                opacity: 1,
                y: 0,
                ease: "power2.out"
            }, "-=0.3")
            // Animate form elements
            .to("#fullNameField", {
                duration: 0.5,
                opacity: 1,
                x: 0,
                ease: "power2.out"
            }, "-=0.2")
            .to("#cccdField", {
                duration: 0.5,
                opacity: 1,
                x: 0,
                ease: "power2.out"
            }, "-=0.3")
            .to("#genderField", {
                duration: 0.5,
                opacity: 1,
                x: 0,
                ease: "power2.out"
            }, "-=0.3")
            .to("#dobField", {
                duration: 0.5,
                opacity: 1,
                x: 0,
                ease: "power2.out"
            }, "-=0.3")
            .to("#usernameField", {
                duration: 0.5,
                opacity: 1,
                x: 0,
                ease: "power2.out"
            }, "-=0.3")
            .to("#passwordField", {
                duration: 0.5,
                opacity: 1,
                x: 0,
                ease: "power2.out"
            }, "-=0.3")
            .to("#emailField", {
                duration: 0.5,
                opacity: 1,
                x: 0,
                ease: "power2.out"
            }, "-=0.3")
            .to("#phoneField", {
                duration: 0.5,
                opacity: 1,
                x: 0,
                ease: "power2.out"
            }, "-=0.3")
            .to("#addressField", {
                duration: 0.5,
                opacity: 1,
                x: 0,
                ease: "power2.out"
            }, "-=0.3")
            .to("#registerBtn", {
                duration: 0.5,
                opacity: 1,
                x: 0,
                ease: "power2.out"
            }, "-=0.3")
            .to("#loginBtn", {
                duration: 0.5,
                opacity: 1,
                x: 0,
                ease: "power2.out"
            }, "-=0.3");

            // Logo hover animation
            const logo = document.getElementById('logo');
            logo.addEventListener('mouseenter', function () {
                gsap.to(logo, {
                    duration: 0.3,
                    scale: 1.1,
                    rotation: 5,
                    ease: "power2.out"
                });
            });

            logo.addEventListener('mouseleave', function () {
                gsap.to(logo, {
                    duration: 0.3,
                    scale: 1,
                    rotation: 0,
                    ease: "power2.out"
                });
           –

            // Button hover animations
            const buttons = document.querySelectorAll('.btn');
            buttons.forEach(button => {
                button.addEventListener('mouseenter', function () {
                    gsap.to(button, {
                        duration: 0.2,
                        scale: 1.02,
                        ease: "power2.out"
                    });
                });

                button.addEventListener('mouseleave', function () {
                    gsap.to(button, {
                        duration: 0.2,
                        scale: 1,
                        ease: "power2.out"
                    });
                });
            });

            // Form input animations
            const inputs = document.querySelectorAll('.form-control, .form-check-input');
            inputs.forEach(input => {
                input.addEventListener('focus', function () {
                    gsap.to(input.parentElement, {
                        duration: 0.3,
                        scale: 1.02,
                        ease: "power2.out"
                    });
                });

                input.addEventListener('blur', function () {
                    gsap.to(input.parentElement, {
                        duration: 0.3,
                        scale: 1,
                        ease: "power2.out"
                    });
                });
            });

            // Form submission animation
            const form = document.getElementById('registerForm');
            form.addEventListener('submit', function (e) {
                const submitBtn = document.getElementById('registerBtn');
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Đang đăng ký...';

                gsap.to(submitBtn, {
                    duration: 0.3,
                    scale: 0.98,
                    ease: "power2.out"
                });
            });
        });
    </script>
</body>
</html>