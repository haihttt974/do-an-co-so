@model doan3.ViewModel.ChangePasswordViewModel

@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <!-- GSAP -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>

    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            overflow-x: hidden;
        }

        .change-password-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 1rem;
        }

        .change-password-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            padding: 3rem;
            width: 100%;
            max-width: 500px;
            position: relative;
            overflow: hidden;
        }

            .change-password-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 5px;
                background: linear-gradient(90deg, #667eea, #764ba2, #667eea);
                background-size: 200% 100%;
                animation: shimmer 2s infinite;
            }

        @@keyframes shimmer {
            0% {
                background-position: -200% 0;
            }

            100% {
                background-position: 200% 0;
            }
        }

        .change-password-title {
            color: #333;
            font-size: 1.8rem;
            font-weight: 700;
            text-align: center;
            margin-bottom: 2rem;
        }

        .form-floating {
            margin-bottom: 1.5rem;
        }

        .form-control {
            border: 2px solid #e9ecef;
            border-radius: 12px;
            padding: 1rem 1.2rem;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: rgba(255, 255, 255, 0.9);
        }

            .form-control:focus {
                border-color: #667eea;
                box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
                background: white;
            }

        .form-floating > label {
            color: #666;
            font-weight: 500;
        }

        .btn-submit {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 12px;
            padding: 1rem 2rem;
            font-size: 1.1rem;
            font-weight: 600;
            color: white;
            width: 100%;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .btn-submit:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 20px rgba(102, 126, 234, 0.4);
                background: linear-gradient(135deg, #5a6fd8 0%, #6a4190 100%);
            }

            .btn-submit:active {
                transform: translateY(0);
            }

        .btn-cancel {
            background: transparent;
            border: 2px solid #667eea;
            color: #667eea;
            border-radius: 12px;
            padding: 0.8rem 2rem;
            font-weight: 600;
            width: 100%;
            transition: all 0.3s ease;
            margin-top: 1rem;
        }

            .btn-cancel:hover {
                background: #667eea;
                color: white;
                transform: translateY(-2px);
                box-shadow: 0 8px 16px rgba(102, 126, 234, 0.3);
            }

        .alert {
            border-radius: 12px;
            border: none;
            margin-bottom: 1.5rem;
        }

        .alert-danger {
            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
            color: white;
        }

        .floating-shapes {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: -1;
        }

        .shape {
            position: absolute;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            animation: float 6s ease-in-out infinite;
        }

            .shape:nth-child(1) {
                width: 80px;
                height: 80px;
                top: 10%;
                left: 10%;
                animation-delay: 0s;
            }

            .shape:nth-child(2) {
                width: 120px;
                height: 120px;
                top: 20%;
                right: 15%;
                animation-delay: 2s;
            }

            .shape:nth-child(3) {
                width: 60px;
                height: 60px;
                bottom: 15%;
                left: 20%;
                animation-delay: 4s;
            }

            .shape:nth-child(4) {
                width: 100px;
                height: 100px;
                bottom: 20%;
                right: 10%;
                animation-delay: 1s;
            }

        @@keyframes float {
            0%, 100% {
                transform: translateY(0px) rotate(0deg);
            }

            50% {
                transform: translateY(-20px) rotate(180deg);
            }
        }

        .input-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #666;
            z-index: 10;
        }

        .form-floating.with-icon .form-control {
            padding-left: 3rem;
        }

        .form-floating.with-icon > label {
            left: 3rem;
        }

        .modal-content {
            border-radius: 12px;
            border: none;
        }

        .modal-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-top-left-radius: 12px;
            border-top-right-radius: 12px;
        }

        .modal-body {
            background: rgba(255, 255, 255, 0.95);
            color: #333;
        }

        .modal-footer {
            background: rgba(255, 255, 255, 0.95);
            border-bottom-left-radius: 12px;
            border-bottom-right-radius: 12px;
        }

            .modal-footer .btn-primary {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                border: none;
                border-radius: 12px;
            }

                .modal-footer .btn-primary:hover {
                    background: linear-gradient(135deg, #5a6fd8 0%, #6a4190 100%);
                    transform: translateY(-2px);
                    box-shadow: 0 8px 16px rgba(102, 126, 234, 0.3);
                }

        @@media (max-width: 576px) {
            .change-password-card {
                padding: 2rem 1.5rem;
                margin: 1rem;
            }

            .change-password-title {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <!-- Floating Background Shapes -->
    <div class="floating-shapes">
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
    </div>

    <div class="change-password-container">
        <div class="change-password-card" id="changePasswordCard">
            <!-- Change Password Title -->
            <h2 class="change-password-title" id="changePasswordTitle">Đổi mật khẩu</h2>

            <!-- Error Messages -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger" id="errorAlert">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div><i class="fas fa-exclamation-triangle me-2"></i>@error.ErrorMessage</div>
                    }
                </div>
            }

            <!-- Change Password Form -->
            <form id="changePasswordForm" asp-action="ChangePassword" method="post">
                <!-- Current Password Field -->
                <div class="form-floating with-icon mb-3" id="currentPasswordField">
                    <i class="fas fa-lock input-icon"></i>
                    <input asp-for="CurrentPassword" class="form-control" id="CurrentPassword" placeholder="Mật khẩu cũ" required>
                    <label for="CurrentPassword">Mật khẩu cũ</label>
                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                </div>

                <!-- New Password Field -->
                <div class="form-floating with-icon mb-3" id="newPasswordField">
                    <i class="fas fa-lock input-icon"></i>
                    <input asp-for="NewPassword" class="form-control" id="NewPassword" placeholder="Mật khẩu mới" required>
                    <label for="NewPassword">Mật khẩu mới</label>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <!-- Confirm New Password Field -->
                <div class="form-floating with-icon mb-3" id="confirmNewPasswordField">
                    <i class="fas fa-lock input-icon"></i>
                    <input asp-for="ConfirmNewPassword" class="form-control" id="ConfirmNewPassword" placeholder="Nhập lại mật khẩu mới" required>
                    <label for="ConfirmNewPassword">Nhập lại mật khẩu mới</label>
                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                </div>

                <!-- OTP Field -->
                <div id="otpSection" style="display: none;" class="form-floating with-icon mb-3" id="otpField">
                    <i class="fas fa-key input-icon"></i>
                    <input asp-for="OTP" class="form-control" id="OTP" placeholder="Mã OTP" disabled>
                    <label for="OTP">Mã OTP</label>
                    <span asp-validation-for="OTP" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <button type="submit" id="submitButton" class="btn btn-submit">
                    <i class="fas fa-paper-plane me-2"></i>Gửi
                </button>

                <!-- Cancel Button -->
                <a href="@Url.Action("Profile", "Account")" class="btn btn-cancel" id="cancelBtn">
                    <i class="fas fa-times me-2"></i>Hủy
                </a>
            </form>
        </div>
    </div>

    <!-- Success Modal -->
    <div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="successModalLabel">Thành công</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Đã đổi mật khẩu thành công.
                </div>
                <div class="modal-footer">
                    <a href="@Url.Action("Profile", "Account")" class="btn btn-primary">Quay lại hồ sơ</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    @section Scripts {
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            $(document).ready(function () {
                // Kích hoạt xác thực phía client
                $("#changePasswordForm").validate();

                $("#changePasswordForm").on("submit", function (e) {
                    var otpSection = $("#otpSection");
                    var otpInput = $("#OTP");

                    e.preventDefault();

                    if (otpSection.is(":hidden")) {
                        if ($(this).valid()) {
                            // Vô hiệu hóa OTP trong request đầu tiên
                            otpInput.prop("disabled", true);

                            $.ajax({
                                url: '@Url.Action("SendOTP", "Account")',
                                type: 'POST',
                                data: $(this).serialize(),
                                success: function (response) {
                                    if (response.success) {
                                        otpSection.show();
                                        otpInput.prop("disabled", false);
                                        $("#submitButton").html('<i class="fas fa-check me-2"></i>Xác nhận OTP');
                                    } else {
                                        var errorMessage = response.message;
                                        if (response.errors && response.errors.length > 0) {
                                            errorMessage += "\nChi tiết lỗi:\n" + response.errors.join("\n");
                                        }
                                        alert(errorMessage);
                                    }
                                },
                                error: function () {
                                    alert("Đã xảy ra lỗi khi gửi OTP.");
                                },
                                complete: function () {
                                    otpInput.prop("disabled", false);
                                }
                            });
                        }
                    } else {
                        if ($(this).valid()) {
                            $.ajax({
                                url: '@Url.Action("ChangePassword", "Account")',
                                type: 'POST',
                                data: $(this).serialize(),
                                success: function (response) {
                                    if (response.success) {
                                        // Hiển thị modal thành công
                                        var successModal = new bootstrap.Modal(document.getElementById('successModal'));
                                        successModal.show();
                                        // Reset form
                                        $("#changePasswordForm")[0].reset();
                                        otpSection.hide();
                                        $("#submitButton").html('<i class="fas fa-paper-plane me-2"></i>Gửi');
                                    } else {
                                        alert(response.message || "Đã xảy ra lỗi khi đổi mật khẩu.");
                                    }
                                },
                                error: function () {
                                    alert("Đã xảy ra lỗi khi đổi mật khẩu.");
                                }
                            });
                        }
                    }
                });
            });
        </script>
        <script>
            // GSAP Animations
            document.addEventListener('DOMContentLoaded', function () {
                // Create timeline
                const tl = gsap.timeline();

                // Initial state
                gsap.set("#changePasswordCard", { scale: 0.8, opacity: 0 });
                gsap.set("#changePasswordTitle", { opacity: 0, y: 20 });
                gsap.set("#currentPasswordField, #newPasswordField, #confirmNewPasswordField, #otpField, #submitButton, #cancelBtn", {
                    opacity: 0,
                    x: -30
                });

                // Animate change password card entrance
                tl.to("#changePasswordCard", {
                    duration: 0.8,
                    scale: 1,
                    opacity: 1,
                    ease: "back.out(1.7)"
                })
                // Animate title
                .to("#changePasswordTitle", {
                    duration: 0.5,
                    opacity: 1,
                    y: 0,
                    ease: "power2.out"
                }, "-=0.3")
                // Animate form elements
                .to("#currentPasswordField", {
                    duration: 0.5,
                    opacity: 1,
                    x: 0,
                    ease: "power2.out"
                }, "-=0.2")
                .to("#newPasswordField", {
                    duration: 0.5,
                    opacity: 1,
                    x: 0,
                    ease: "power2.out"
                }, "-=0.3")
                .to("#confirmNewPasswordField", {
                    duration: 0.5,
                    opacity: 1,
                    x: 0,
                    ease: "power2.out"
                }, "-=0.3")
                .to("#otpField", {
                    duration: 0.5,
                    opacity: function() { return document.getElementById('otpSection').style.display === 'none' ? 0 : 1; },
                    x: 0,
                    ease: "power2.out"
                }, "-=0.3")
                .to("#submitButton", {
                    duration: 0.5,
                    opacity: 1,
                    x: 0,
                    ease: "power2.out"
                }, "-=0.3")
                .to("#cancelBtn", {
                    duration: 0.5,
                    opacity: 1,
                    x: 0,
                    ease: "power2.out"
                }, "-=0.3");

                // Button hover animations
                const buttons = document.querySelectorAll('.btn');
                buttons.forEach(button => {
                    button.addEventListener('mouseenter', function () {
                        gsap.to(button, {
                            duration: 0.2,
                            scale: 1.02,
                            ease: "power2.out"
                        });
                    });

                    button.addEventListener('mouseleave', function () {
                        gsap.to(button, {
                            duration: 0.2,
                            scale: 1,
                            ease: "power2.out"
                        });
                    });
                });

                // Form input animations
                const inputs = document.querySelectorAll('.form-control');
                inputs.forEach(input => {
                    input.addEventListener('focus', function () {
                        gsap.to(input.parentElement, {
                            duration: 0.3,
                            scale: 1.02,
                            ease: "power2.out"
                        });
                    });

                    input.addEventListener('blur', function () {
                        gsap.to(input.parentElement, {
                            duration: 0.3,
                            scale: 1,
                            ease: "power2.out"
                        });
                    });
                });

                // Form submission animation
                const form = document.getElementById('changePasswordForm');
                form.addEventListener('submit', function (e) {
                    const submitBtn = document.getElementById('submitButton');
                    if (submitBtn.textContent.includes('Gửi')) {
                        submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Đang gửi...';
                    } else {
                        submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Đang xác nhận...';
                    }

                    gsap.to(submitBtn, {
                        duration: 0.3,
                        scale: 0.98,
                        ease: "power2.out"
                    });
                });
            });
        </script>
    }
</body>
</html>