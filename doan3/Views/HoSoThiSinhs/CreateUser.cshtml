@model doan3.ViewModel.CreateHoSoViewModel
@{
    ViewData["Title"] = "Tạo hồ sơ mới";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="CreateUser" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Loại hồ sơ</label>
        <select asp-for="LoaiHoso" class="form-control">
            <option value="Đăng ký mới">Đăng ký mới</option>
            <option value="Nâng hạng">Nâng hạng</option>
        </select>
    </div>

    <div class="form-group">
        <label>Chọn hạng</label>
        <select asp-for="HangId" asp-items="ViewBag.HangList" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Ảnh thí sinh</label>
        <input asp-for="ImgThisinhFile" type="file" class="form-control" />
        <span asp-validation-for="ImgThisinhFile" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Giấy khám sức khỏe</label>
        <input asp-for="KhamsuckhoeFile" type="file" class="form-control" />
        <span asp-validation-for="KhamsuckhoeFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Tạo hồ sơ</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
