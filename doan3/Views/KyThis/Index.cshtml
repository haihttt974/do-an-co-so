@model IEnumerable<doan3.Models.KyThi>

@{
    ViewData["Title"] = "Danh sách kỳ thi";
}

<!-- Bootstrap 5 + GSAP -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/gsap@3.12.2/dist/gsap.min.js"></script>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Danh sách kỳ thi</h2>
        <a asp-action="Create" class="btn btn-success">+ Thêm mới</a>
    </div>

    <div class="table-responsive animate-table">
        <table class="table table-hover table-bordered shadow-sm">
            <thead class="table-light">
                <tr>
                    <th>Tên kỳ thi</th>
                    <th>Hạng GPLX</th>
                    <th>Loại thi</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Tenkythi)</td>
                        <td>@Html.DisplayFor(modelItem => item.Hang.Tenhang)</td>
                        <td>@Html.DisplayFor(modelItem => item.Loaithi.Tenloaithi)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.KythiId" class="btn btn-sm btn-warning me-2">Sửa</a>
                            <a asp-action="Details" asp-route-id="@item.KythiId" class="btn btn-sm btn-info text-white">Chi tiết</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    gsap.from(".animate-table tbody tr", {
        opacity: 0,
        y: 30,
        duration: 0.6,
        stagger: 0.1,
        ease: "power2.out"
    });
</script>
