@model doan3.Models.GiaoVien

@{
    ViewData["Title"] = "Xóa giáo viên";
}

<h1>Xóa giáo viên</h1>

<h3>Bạn có chắc chắn muốn xóa giáo viên này không?</h3>
<div>
    <h4>Thông tin giáo viên</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Họ và tên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tengiaovien)
        </dd>
        <dt class="col-sm-2">
            Chuyên môn
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Chuyenmon)
        </dd>
        <dt class="col-sm-2">
            Hạng đào tạo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HangDaotao)
        </dd>
        <dt class="col-sm-2">
            Ngày bắt đầu làm việc
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ngaybatdaulamviec)
        </dd>
        <dt class="col-sm-2">
            Ảnh giáo viên
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImgGv))
            {
                <img src="@Model.ImgGv" alt="Ảnh giáo viên" style="width: 100px; height: 100px; object-fit: cover; border-radius: 8px;" />
            }
            else
            {
                <span>Chưa có ảnh</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="GiaovienId" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
    </form>
</div>