@model doan3.Models.GiaoVien

@{
    ViewData["Title"] = "Chi tiết giáo viên";
}

<h1>Chi tiết giáo viên</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-3">Họ và tên</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Tengiaovien)</dd>

            <dt class="col-sm-3">Chuyên môn</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Chuyenmon)</dd>

            <dt class="col-sm-3">Hạng đào tạo</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.HangDaotao)</dd>

            <dt class="col-sm-3">Ngày bắt đầu làm việc</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Ngaybatdaulamviec)</dd>

            <dt class="col-sm-3">Ảnh giáo viên</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.ImgGv))
                {
                    <img src="@Model.ImgGv" alt="Ảnh giáo viên" style="width: 100px; height: 100px; object-fit: cover; border-radius: 8px;" />
                }
                else
                {
                    <span>Chưa có ảnh</span>
                }
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.GiaovienId" class="btn btn-primary">Chỉnh sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</div>