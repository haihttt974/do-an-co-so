@model LopHocStatsNewViewModel

@{
    ViewData["Title"] = "Báo cáo thống kê lớp học (Thông tin khác)";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Driving School</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <style>
        body {
            background: linear-gradient(to right, #43cea2, #185a9d);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            overflow-x: hidden;
        }

        .container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 1rem;
        }

        .card {
            background-color: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            padding: 3rem;
            max-width: 1100px;
            width: 100%;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
            position: relative;
        }

            .card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                height: 5px;
                width: 100%;
                background: linear-gradient(90deg, #43cea2, #185a9d, #43cea2);
                background-size: 200% auto;
                animation: shimmer 2.5s linear infinite;
            }

        @@keyframes shimmer {
            0% {
                background-position: 200% center;
            }

            100% {
                background-position: -200% center;
            }
        }

        h2 {
            text-align: center;
            margin-bottom: 2rem;
            font-weight: 700;
            color: #185a9d;
        }

        .table th {
            background: linear-gradient(to right, #43cea2, #185a9d);
            color: white;
            font-weight: 600;
            text-align: center;
        }

        .table td {
            text-align: center;
            vertical-align: middle;
        }

        .table tbody tr:hover {
            background-color: rgba(67, 206, 162, 0.1);
            transition: 0.3s ease;
        }

        .btn-back {
            display: inline-flex;
            align-items: center;
            background-color: transparent;
            color: #43cea2;
            border: 2px solid #43cea2;
            padding: 0.7rem 1.8rem;
            border-radius: 12px;
            font-weight: 600;
            margin-top: 2rem;
            transition: all 0.3s ease;
            text-decoration: none;
        }

            .btn-back:hover {
                background-color: #43cea2;
                color: white;
                transform: translateY(-2px);
                box-shadow: 0 8px 16px rgba(67, 206, 162, 0.4);
            }

            .btn-back i {
                margin-right: 8px;
            }

        .floating-shapes {
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            width: 100%;
            z-index: -1;
            pointer-events: none;
        }

        .shape {
            position: absolute;
            border-radius: 50%;
            background-color: rgba(255, 255, 255, 0.15);
            animation: float 6s ease-in-out infinite;
        }

            .shape:nth-child(1) {
                width: 80px;
                height: 80px;
                top: 10%;
                left: 15%;
                animation-delay: 0s;
            }

            .shape:nth-child(2) {
                width: 100px;
                height: 100px;
                bottom: 20%;
                right: 10%;
                animation-delay: 2s;
            }

            .shape:nth-child(3) {
                width: 60px;
                height: 60px;
                top: 40%;
                right: 20%;
                animation-delay: 4s;
            }

        @@keyframes float {
            0%, 100% {
                transform: translateY(0) rotate(0deg);
            }

            50% {
                transform: translateY(-15px) rotate(180deg);
            }
        }

        @@media (max-width: 768px) {
            .card {
                padding: 2rem;
            }

            h2 {
                font-size: 1.5rem;
            }

            .table {
                font-size: 0.9rem;
            }
        }
    </style>
</head>
<body>
    <div class="floating-shapes">
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
    </div>

    <div class="container">
        <div class="card" id="reportCard">
            <h2>Báo cáo Thống Kê Lớp Học (Thông Tin Khác)</h2>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Mã Lớp</th>
                        <th>Tên Lớp</th>
                        <th>Số Buổi Học</th>
                        <th>Số Học Viên Đạt Yêu Cầu</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.LopHocStatsNew)
                    {
                        <tr class="table-row">
                            <td>@item.LopId</td>
                            <td>@item.TenLop</td>
                            <td>@item.SoBuoiHoc</td>
                            <td>@item.SoHocVienDat</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="text-center">
                <a asp-action="Index" asp-controller="Report" class="btn-back">
                    <i class="fas fa-arrow-left"></i>Quay lại
                </a>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            gsap.set("#reportCard", { scale: 0.8, opacity: 0 });
            gsap.set("h2", { opacity: 0, y: 20 });
            gsap.set(".table-row", { opacity: 0, y: 20 });
            gsap.set(".btn-back", { opacity: 0, x: -30 });

            const tl = gsap.timeline();
            tl.to("#reportCard", {
                duration: 0.7,
                scale: 1,
                opacity: 1,
                ease: "back.out(1.7)"
            })
            .to("h2", {
                duration: 0.4,
                opacity: 1,
                y: 0,
                ease: "power2.out"
            }, "-=0.3")
            .to(".table-row", {
                duration: 0.5,
                opacity: 1,
                y: 0,
                stagger: 0.1,
                ease: "power2.out"
            }, "-=0.2")
            .to(".btn-back", {
                duration: 0.4,
                opacity: 1,
                x: 0,
                ease: "power2.out"
            });

            const rows = document.querySelectorAll(".table-row");
            rows.forEach(row => {
                row.addEventListener("mouseenter", () => {
                    gsap.to(row, { scale: 1.01, duration: 0.2 });
                });
                row.addEventListener("mouseleave", () => {
                    gsap.to(row, { scale: 1, duration: 0.2 });
                });
            });
        });
    </script>
</body>
</html>
