@model DiemDanhGiaoVienViewModel

@{
    ViewData["Title"] = "Báo cáo điểm danh theo giáo viên";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Driving School</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <style>
        body {
            background: linear-gradient(135deg, #43cea2 0%, #185a9d 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            overflow-x: hidden;
        }

        .container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 1rem;
        }

        .card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            padding: 3rem;
            width: 100%;
            max-width: 1100px;
            position: relative;
            overflow: hidden;
        }

            .card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 5px;
                background: linear-gradient(90deg, #43cea2, #185a9d, #43cea2);
                background-size: 200% 100%;
                animation: shimmer 2s infinite;
            }

        @@keyframes shimmer {
            0% {
                background-position: -200% 0;
            }

            100% {
                background-position: 200% 0;
            }
        }

        .brand-title {
            color: #333;
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 2rem;
            text-align: center;
        }

        .table {
            background: white;
            border-radius: 12px;
            overflow: hidden;
        }

            .table th, .table td {
                vertical-align: middle;
                padding: 1rem;
            }

            .table th {
                background: linear-gradient(135deg, #43cea2 0%, #185a9d 100%);
                color: white;
                font-weight: 600;
            }

            .table td {
                color: #333;
            }

            .table tr:hover {
                background: rgba(67, 206, 162, 0.1);
                transition: background 0.3s ease;
            }

        .btn-back {
            background: transparent;
            border: 2px solid #43cea2;
            color: #43cea2;
            border-radius: 12px;
            padding: 0.8rem 2rem;
            font-weight: 600;
            transition: all 0.3s ease;
            margin-top: 1rem;
            display: inline-flex;
            align-items: center;
        }

            .btn-back:hover {
                background: #43cea2;
                color: white;
                transform: translateY(-2px);
                box-shadow: 0 8px 16px rgba(67, 206, 162, 0.3);
            }

        .floating-shapes {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: -1;
        }

        .shape {
            position: absolute;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            animation: float 6s ease-in-out infinite;
        }

            .shape:nth-child(1) {
                width: 80px;
                height: 80px;
                top: 10%;
                left: 10%;
                animation-delay: 0s;
            }

            .shape:nth-child(2) {
                width: 120px;
                height: 120px;
                top: 20%;
                right: 15%;
                animation-delay: 2s;
            }

            .shape:nth-child(3) {
                width: 60px;
                height: 60px;
                bottom: 15%;
                left: 20%;
                animation-delay: 4s;
            }

            .shape:nth-child(4) {
                width: 100px;
                height: 100px;
                bottom: 20%;
                right: 10%;
                animation-delay: 1s;
            }

        @@keyframes float {
            0%, 100% {
                transform: translateY(0px) rotate(0deg);
            }

            50% {
                transform: translateY(-20px) rotate(180deg);
            }
        }

        @@media (max-width: 576px) {
            .card {
                padding: 2rem 1.5rem;
                margin: 1rem;
            }

            .brand-title {
                font-size: 1.5rem;
            }

            .table {
                font-size: 0.9rem;
            }
        }
    </style>
</head>
<body>
    <div class="floating-shapes">
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
    </div>

    <div class="container">
        <div class="card" id="statsCard">
            <h2 class="brand-title">Báo cáo Điểm Danh Theo Giáo Viên</h2>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Mã Giáo Viên</th>
                        <th>Tên Giáo Viên</th>
                        <th>Tỷ Lệ Điểm Danh (%)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.DiemDanhStats)
                    {
                        <tr class="stats-row">
                            <td>@item.GiaoVienId</td>
                            <td>@item.TenGiaoVien</td>
                            <td>@item.TiLeDiemDanh.ToString("F2")</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="text-center">
                <a asp-action="Index" asp-controller="Report" class="btn btn-back">
                    <i class="fas fa-arrow-left me-2"></i>Quay lại
                </a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const tl = gsap.timeline();
            gsap.set("#statsCard", { scale: 0.8, opacity: 0 });
            gsap.set(".brand-title", { opacity: 0, y: 20 });
            gsap.set(".stats-row", { opacity: 0, y: 20 });
            gsap.set(".btn-back", { opacity: 0, x: -30 });

            tl.to("#statsCard", {
                duration: 0.8,
                scale: 1,
                opacity: 1,
                ease: "back.out(1.7)"
            })
            .to(".brand-title", {
                duration: 0.5,
                opacity: 1,
                y: 0,
                ease: "power2.out"
            }, "-=0.3")
            .to(".stats-row", {
                duration: 0.5,
                opacity: 1,
                y: 0,
                ease: "power2.out",
                stagger: 0.1
            }, "-=0.3")
            .to(".btn-back", {
                duration: 0.5,
                opacity: 1,
                x: 0,
                ease: "power2.out"
            });

            const buttons = document.querySelectorAll('.btn-back');
            buttons.forEach(button => {
                button.addEventListener('mouseenter', function () {
                    gsap.to(button, { duration: 0.2, scale: 1.02, ease: "power2.out" });
                });
                button.addEventListener('mouseleave', function () {
                    gsap.to(button, { duration: 0.2, scale: 1, ease: "power2.out" });
                });
            });

            const rows = document.querySelectorAll('.stats-row');
            rows.forEach(row => {
                row.addEventListener('mouseenter', function () {
                    gsap.to(row, { duration: 0.2, scale: 1.01, ease: "power2.out" });
                });
                row.addEventListener('mouseleave', function () {
                    gsap.to(row, { duration: 0.2, scale: 1, ease: "power2.out" });
                });
            });
        });
    </script>
</body>
</html>
