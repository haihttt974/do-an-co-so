@model doan3.Models.Phanhoi

@{
    ViewData["Title"] = "Chi tiết phản hồi";
}

<h1 class="text-center text-primary fw-bold mb-4">Chi tiết phản hồi</h1>

<div class="card shadow-lg">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">Học viên</dt>
            <dd class="col-sm-9">@Model.Hocvien.Tenhocvien</dd>

            <dt class="col-sm-3 fw-bold">Nội dung</dt>
            <dd class="col-sm-9">@Model.Noidung</dd>

            <dt class="col-sm-3 fw-bold">Thời gian phản hồi</dt>
            <dd class="col-sm-9">@Model.Thoigianph</dd>
        </dl>

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle me-1"></i> Quay lại danh sách
            </a>
        </div>
    </div>
</div>
