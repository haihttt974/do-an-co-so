@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Driving School</title>

    <!-- CDNs -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">

    <!-- Custom styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/doan3.styles.css" asp-append-version="true" />

    <style>
        .brand-link {
            height: 3.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .brand-logo {
            width: 30px;
            height: 30px;
            object-fit: contain;
        }

        .sidebar-mini.sidebar-collapse .brand-text {
            display: none !important;
        }

        .sidebar-mini:not(.sidebar-collapse) .brand-text {
            display: inline !important;
        }

        .user-menu .dropdown-menu {
            right: 0;
            left: auto;
        }

        /* Dark mode styles */
        body.dark-mode {
            background-color: #222222;
            color: #f5f5f5;
        }

        .dark-mode .content-wrapper {
            background-color: #222;
        }

        .dark-mode .card {
            background-color: #2c2c2c;
            color: #f5f5f5;
            border-color: #444;
        }

        .dark-mode .card-header {
            background-color: #333;
            border-color: #444;
        }

        .dark-mode .table {
            color: #f5f5f5;
        }

        .dark-mode .table-bordered,
        .dark-mode .table-bordered th,
        .dark-mode .table-bordered td {
            border-color: #444;
        }

        .dark-mode .pagination .page-link {
            background-color: #2c2c2c;
            border-color: #444;
            color: #f5f5f5;
        }

        .dark-mode .pagination .page-item.active .page-link {
            background-color: #007bff;
            border-color: #007bff;
        }

        .dark-mode .form-control {
            background-color: #333;
            border-color: #444;
            color: #f5f5f5;
        }

        .dark-mode .input-group-text {
            background-color: #444;
            border-color: #555;
            color: #f5f5f5;
        }

        .dark-mode .navbar-white {
            background-color: #2c2c2c !important;
        }

        .dark-mode .navbar-light .navbar-nav .nav-link {
            color: #f5f5f5;
        }

        .dark-mode .main-header {
            border-color: #444;
        }

        .dark-mode .main-footer {
            background-color: #2c2c2c;
            border-color: #444;
            color: #f5f5f5;
        }

        .dark-mode-toggle {
            cursor: pointer;
            padding: 8px;
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            transition: background-color 0.3s;
        }

            .dark-mode-toggle:hover {
                background-color: rgba(0, 0, 0, 0.1);
            }

        .dark-mode .dark-mode-toggle:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        .dark-mode h1,
        .dark-mode h2,
        .dark-mode h3,
        .dark-mode h4,
        .dark-mode h5,
        .dark-mode h6 {
            color: #f5f5f5;
        }

        .dark-mode th,
        .dark-mode td {
            background-color: #333 !important;
            color: #ffffff !important;
            border-color: #555 !important;
        }

            .dark-mode td a,
            .dark-mode td p,
            .dark-mode td span {
                color: #f5f5f5 !important;
            }

        .dark-mode table {
            border-collapse: collapse;
            border: 1px solid #666 !important;
        }
    </style>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="#" id="toggleSidebar" class="nav-link">
                        <i class="fas fa-bars"></i>
                    </a>
                </li>
                <li class="nav-item"><a href="/" class="nav-link"><i class="fas fa-home me-1"></i> Home</a></li>
                <li class="nav-item"><a href="/KhoaHocs" class="nav-link"><i class="fas fa-car me-1"></i> Khóa học</a></li>
                <li class="nav-item"><a href="/GiaoViens" class="nav-link"><i class="fas fa-chalkboard-teacher me-1"></i> Giáo viên</a></li>
            </ul>

            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <div id="darkModeToggle" class="nav-link dark-mode-toggle" title="Toggle Dark Mode">
                        <i class="fas fa-moon"></i>
                    </div>
                </li>
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <li class="nav-item dropdown user-menu">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-user-circle me-1"></i>
                            <span class="d-none d-md-inline">@User.Identity.Name</span>
                        </a>
                        <div class="dropdown-menu" aria-labelledby="userDropdown">
                            <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                <i class="fas fa-user me-2"></i> Trang cá nhân
                            </a>
                            <a class="dropdown-item" asp-controller="Account" asp-action="EditProfile">
                                <i class="fas fa-edit me-2"></i> Chỉnh sửa trang cá nhân
                            </a>
                            <a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword">
                                <i class="fas fa-key me-2"></i> Đổi mật khẩu
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="@Url.Action("SetCulture", "Culture", new { culture = "vi" })">
                                <i class="fas fa-globe me-2"></i> Tiếng Việt
                            </a>
                            <a class="dropdown-item" href="@Url.Action("SetCulture", "Culture", new { culture = "en" })">
                                <i class="fas fa-globe me-2"></i> English
                            </a>
                            <div class="dropdown-divider"></div>
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" class="dropdown-item text-danger">
                                    <i class="fas fa-sign-out-alt me-2"></i> Đăng xuất
                                </button>
                            </form>
                        </div>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Login">
                            <i class="fas fa-sign-in-alt me-1"></i> Đăng nhập
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Register">
                            <i class="fas fa-user-plus me-1"></i> Đăng ký
                        </a>
                    </li>
                }
            </ul>
        </nav>

        <!-- Sidebar -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="/" class="brand-link d-flex align-items-center justify-content-center p-2">
                <i class="fas fa-car brand-logo"></i>
                <span class="brand-text font-weight-light ms-2">Driving School</span>
            </a>

            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu">
                        <li class="nav-item">
                            <a href="/Dashboard" class="nav-link">
                                <i class="nav-icon fas fa-chart-line"></i>
                                <p>Dashboard</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/" class="nav-link">
                                <i class="nav-icon fas fa-home"></i>
                                <p>Home</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/KhoaHocs" class="nav-link">
                                <i class="nav-icon fas fa-car"></i>
                                <p>Khóa học</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/GiaoViens" class="nav-link">
                                <i class="nav-icon fas fa-chalkboard-teacher"></i>
                                <p>Giáo viên</p>
                            </a>
                        </li>
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <a href="/MyCourses" class="nav-link">
                                    <i class="nav-icon fas fa-book"></i>
                                    <p>Khóa học của tôi</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post">
                                    <button type="submit" class="nav-link bg-danger border-0 w-100 text-left">
                                        <i class="nav-icon fas fa-sign-out-alt"></i>
                                        <p>Đăng xuất</p>
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a href="/Account/Login" class="nav-link">
                                    <i class="nav-icon fas fa-sign-in-alt"></i>
                                    <p>Đăng nhập</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/Account/Register" class="nav-link">
                                    <i class="nav-icon fas fa-user-plus"></i>
                                    <p>Đăng ký</p>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Content Wrapper -->
        <div class="content-wrapper">
            <section class="content">
                <div class="container-fluid mt-3">
                    @RenderBody()
                </div>
            </section>
        </div>

        <!-- Footer -->
        <footer class="main-footer text-center">
            <i class="fas fa-copyright me-1"></i> 2025 - Driving School - <a asp-controller="Home" asp-action="Privacy"><i class="fas fa-shield-alt me-1"></i> Privacy</a>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function () {
            // Check localStorage for sidebar state
            var isSidebarCollapsed = localStorage.getItem('sidebarCollapsed') === 'true';
            if (isSidebarCollapsed) {
                $('body').addClass('sidebar-collapse');
            }

            // Toggle sidebar and save state
            $("#toggleSidebar").click(function (e) {
                e.preventDefault();
                $("body").toggleClass("sidebar-collapse");
                localStorage.setItem('sidebarCollapsed', $("body").hasClass("sidebar-collapse"));
            });

            // Enable Bootstrap dropdowns
            $('.dropdown-toggle').dropdown();

            // Dark Mode Implementation
            function initDarkMode() {
                var isDarkMode = localStorage.getItem('darkMode') === 'true';
                if (isDarkMode) {
                    $('body').addClass('dark-mode');
                    $('#darkModeToggle i').removeClass('fa-moon').addClass('fa-sun');
                }

                $('#darkModeToggle').click(function() {
                    $('body').toggleClass('dark-mode');
                    var isDark = $('body').hasClass('dark-mode');

                    if (isDark) {
                        $('#darkModeToggle i').removeClass('fa-moon').addClass('fa-sun');
                    } else {
                        $('#darkModeToggle i').removeClass('fa-sun').addClass('fa-moon');
                    }

                    localStorage.setItem('darkMode', isDark);
                });
            }

            initDarkMode();
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>