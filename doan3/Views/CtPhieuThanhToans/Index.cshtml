@model IEnumerable<doan3.Models.CtPhieuThanhToan>

@{
    ViewData["Title"] = "Chi tiết phiếu thanh toán";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/gsap@3.12.2/dist/gsap.min.js"></script>

<div class="container py-4">
    <h1 class="mb-4 text-primary">Danh sách chi tiết phiếu thanh toán</h1>

    <div class="table-responsive">
        <table class="table table-bordered table-striped shadow-sm" id="ctPhieuTable">
            <thead class="table-light">
                <tr>
                    <th>Thời gian thanh toán</th>
                    <th>Loại phí</th>
                    <th>Hồ sơ</th>
                    <th>Thanh toán</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="ctphieu-row">
                        <td>@Html.DisplayFor(modelItem => item.Thoigianthanhtoan)</td>
                        <td>@Html.DisplayFor(modelItem => item.Loaiphi)</td>
                        <td>@Html.DisplayFor(modelItem => item.Hoso.HosoId)</td>
                        <td>@Html.DisplayFor(modelItem => item.Thanhtoan.ThanhtoanId)</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.CtPhieuttId" class="btn btn-sm btn-info text-white">Chi tiết</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    gsap.from(".ctphieu-row", {
        opacity: 0,
        y: 30,
        duration: 0.5,
        stagger: 0.1
    });
</script>
