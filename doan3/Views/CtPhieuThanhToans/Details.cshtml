@model doan3.Models.CtPhieuThanhToan

@{
    ViewData["Title"] = "Chi tiết phiếu thanh toán";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container py-4">
    <h1 class="mb-4 text-primary">Chi tiết phiếu thanh toán</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Thời gian thanh toán</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Thoigianthanhtoan)</dd>

                <dt class="col-sm-4">Loại phí</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Loaiphi)</dd>

                <dt class="col-sm-4">Hồ sơ</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Hoso.HosoId)</dd>

                <dt class="col-sm-4">Thanh toán</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Thanhtoan.TenThanhToan)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">← Quay lại danh sách</a>
    </div>
</div>
