@model doan3.Models.LichHoc

@{
    ViewData["Title"] = "Chi Tiết Lịch Học";
}

<h1>Chi Tiết Lịch Học</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Lịch Học</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Lớp</dt>
            <dd class="col-sm-9">@(Model.Lop?.Tenlop ?? "N/A")</dd>

            <dt class="col-sm-3">Thời Gian Bắt Đầu</dt>
            <dd class="col-sm-9">@Model.TgBatdau.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-3">Thời Gian Kết Thúc</dt>
            <dd class="col-sm-9">@Model.TgKetthuc.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-3">Hình Thức Học</dt>
            <dd class="col-sm-9">@Model.Hinhthuchoc</dd>

            <dt class="col-sm-3">Nội Dung</dt>
            <dd class="col-sm-9">@Model.Noidung</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</div>