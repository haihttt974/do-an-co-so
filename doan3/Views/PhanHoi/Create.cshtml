@model doan3.Models.Phanhoi

<div class="container mt-5">
    <div class="card shadow-lg rounded-4 p-4" id="feedbackForm">
        <h2 class="text-primary mb-4 fw-bold text-center" id="formTitle">Gửi phản hồi mới</h2>

        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label for="Noidung" class="form-label fw-semibold">Nội dung phản hồi:</label>
                <textarea asp-for="Noidung" class="form-control border-primary" rows="6" placeholder="Nhập nội dung tại đây..." id="textareaNoidung"></textarea>
                <span asp-validation-for="Noidung" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-4" id="formButtons">
                <button type="submit" class="btn btn-primary px-4 shadow" id="btnSubmitPhanhoi">Gửi phản hồi</button>
                <a asp-action="Index" class="btn btn-outline-secondary" id="btnBackPhanhoi">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <script>
        // Hiệu ứng GSAP chỉ cho form phản hồi
        gsap.from("#feedbackForm", {
            duration: 1,
            y: 50,
            opacity: 0,
            ease: "power3.out"
        });

        gsap.from("#formTitle", {
            delay: 0.2,
            duration: 1,
            x: -100,
            opacity: 0,
            ease: "back.out(1.7)"
        });

        gsap.from("#textareaNoidung", {
            delay: 0.4,
            duration: 1,
            scale: 0.95,
            opacity: 0,
            ease: "power2.out"
        });

        gsap.from(["#btnSubmitPhanhoi", "#btnBackPhanhoi"], {
            delay: 0.6,
            duration: 1,
            y: 20,
            opacity: 0,
            stagger: 0.2,
            ease: "power1.out"
        });
    </script>
}
