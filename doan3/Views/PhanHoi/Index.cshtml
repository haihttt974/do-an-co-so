@model List<doan3.Models.Phanhoi>
@{
    ViewData["Title"] = "Danh sách phản hồi";
}

<div class="container mt-5">
    <h2 class="mb-4">Danh sách phản hồi</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">Gửi phản hồi mới</a>
    </div>

    @if (Model.Any())
    {
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Nội dung</th>
                    <th>Thời gian</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var phanhoi in Model)
                {
                    <tr>
                        <td>@phanhoi.Noidung</td>
                        <td>@phanhoi.Thoigianph.ToString("dd/MM/yyyy HH:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">Bạn chưa có phản hồi nào.</p>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}